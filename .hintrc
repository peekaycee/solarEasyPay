{
  "extends": [
    "development"
  ],
  "hints": {
    "no-inline-styles": "off",
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "video[playsinline]"
        ]
      }
    ],
    "axe/text-alternatives": [
      "default",
      {
        "frame-title": "off"
      }
    ],
    "axe/structure": [
      "default",
      {
        "dlitem": "off",
        "definition-list": "off"
      }
    ],
    "axe/name-role-value": [
      "default",
      {
        "button-name": "off"
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "-ms-touch-action",
          "-ms-perspective",
          "-webkit-box-lines",
          "-ms-flex",
          "-webkit-text-size-adjust"
        ]
      }
    ]
  }
}